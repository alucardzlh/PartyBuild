<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/huiwhite"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">
            <!--右边图片-->
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:id="@+id/item_pc_iv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ceshi_item2"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <!--左边新闻标题-->
                <TextView
                    android:id="@+id/item_pc_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:layout_gravity="top"
                    android:lineSpacingExtra="5dp"
                    android:ellipsize="end"
                    android:text="啊睡觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房价放假舅妈舅舅靠房价放假舅妈舅舅了卡的拿手的"
                    android:textColor="#2D2D2D"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--左边新闻内容-->
                <TextView
                    android:id="@+id/item_pc_context"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:lines="2"
                    android:maxLines="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:lineSpacingExtra="2dp"
                    android:ellipsize="end"
                    android:text="啊睡觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房觉的空间奥靠房价放假舅妈舅舅靠房价放假舅妈舅舅了卡的拿手的"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <!--时间-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout">
                <!--时间图片-->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_history_record"
                    android:id="@+id/imageView" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    android:text="08-27 17:56"
                    android:id="@+id/item_time"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView" />
            </LinearLayout>

            <TextView
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="发布人：张三"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:id="@+id/faburen"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/linearLayout" />
            <!--浏览-->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:text="浏览 30"
                android:textSize="13dp"
                android:layout_marginRight="10dp"
                android:gravity="center|right"
                android:id="@+id/item_liulan"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/item_huifu"
                android:layout_marginEnd="13dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
