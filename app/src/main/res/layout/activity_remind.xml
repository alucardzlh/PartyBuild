<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_remind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.a25908.partybuild.Activitys.RemindActivity">
    <include layout="@layout/headbar"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:id="@+id/txxs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="提醒:"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/renming"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </HorizontalScrollView>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lin_js"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#e0e0e0"
                android:orientation="horizontal"
                android:gravity="center">
                <com.example.a25908.partybuild.Contacts.SearchEditText
                    android:id="@+id/txt_filter_edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:visibility="visible"
                    android:layout_marginRight="30dp"
                    android:paddingRight="5dp"
                    android:maxLines="1"
                    android:layout_marginLeft="30dp"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:background="@drawable/maintop_shape3"
                    android:hint="模糊检索"
                    android:paddingLeft="5dp"
                    android:textSize="12dip" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"/>
            <!--<ScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/huise"/>
                <ListView
                    android:id="@+id/list_view_user_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/huise"/>
            </LinearLayout>
            <!--</ScrollView>-->
        </LinearLayout>

        <TextView
            android:id="@+id/txt_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/fang_dialog"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <com.example.a25908.partybuild.Contacts.SideBar
            android:id="@+id/sild_bar"
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center|right"
            />

        <TextView
            android:id="@+id/txt_user_list_user_num"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="35dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="123"
            android:textColor="#000000"
            android:textSize="12sp" />
    </FrameLayout>



</LinearLayout>

