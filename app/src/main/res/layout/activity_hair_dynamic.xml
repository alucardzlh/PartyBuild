<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hair_dynamic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context="com.example.a25908.partybuild.Activitys.HairDynamicActivity">



    <include layout="@layout/headbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.example.a25908.partybuild.Views.ContainsEmojiEditText
            android:id="@+id/dt_et_con"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="top"
            android:padding="10dp"
            android:hint="这一刻的想法..."
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/details_con_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="上传图片"
                    android:textColor="#757475"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/com_photo"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ec_photo" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip:长按删除"
                android:layout_marginLeft="20dp"/>
        <com.example.a25908.partybuild.Views.MyGridView
            android:id="@+id/myGridViewtc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            />
        </LinearLayout>


    </LinearLayout>

    </ScrollView>



</LinearLayout>
